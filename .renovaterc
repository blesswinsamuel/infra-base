{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^k8sbase/values-default\\.yaml$"
      ],
      "matchStrings": [
        "\n\\s+repo:\\s+['\"]?(?<registryUrl>[^{}\\s]*?)['\"]?\n\\s+chart:\\s+['\"]?(?<depName>[^{}\\s]*?)['\"]?\n\\s+version:\\s+['\"]?(?<currentValue>[^{}\\s]*?)['\"]?\n"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^k8sbase/values-default\\.yaml$"
      ],
      "matchStrings": [
        "\n\\s+repository:\\s+['\"]?(?<depName>[^{}\\s]*?)['\"]?\n\\s+tag:\\s+['\"]?(?<currentValue>[^{}\\s]*?)(?:@(?<currentDigest>sha256:[a-f0-9]+))?['\"]?\n"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "enabledManagers": [
    "custom.regex",
    "gomod",
    "github-actions"
  ],
  "prHourlyLimit": 30,
  "packageRules": [
    {
      "matchPackageNames": [
        "kopia/kopia"
      ],
      "allowedVersions": "<=20000000.0"
    },
    {
      "matchPackageNames": [
        "k8s.io/client-go"
      ],
      "allowedVersions": "<=v1.0.0"
    },
    {
      "matchPackagePatterns": [
        "^minio/"
      ],
      "versioning": "regex:^(RELEASE\\.)?(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})T\\S*?Z$"
    },
    {
      "groupName": "all gomod dependencies",
      "groupSlug": "all-gomod",
      "matchPackagePatterns": [
        "*"
      ],
      "matchManagers": [
        "gomod"
      ]
    },
    {
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "digest",
        "lockFileMaintenance",
        "bump",
        "digest",
        "pin",
        "pinDigest",
        "patch"
      ]
    },
    {
      "groupName": "all minor dependencies",
      "groupSlug": "all-minor",
      "matchPackagePatterns": [
        "*"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "replacement",
        "rollback",
        "minor"
      ]
    },
    {
      "groupName": "all major dependencies",
      "groupSlug": "all-major",
      "matchPackagePatterns": [
        "*"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    }
  ]
}
